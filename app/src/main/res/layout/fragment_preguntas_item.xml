<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_layout_margin_bottom"
    android:layout_marginTop="@dimen/card_layout_margin_top"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect">

        <TextView
            android:id="@+id/txt_pregunta"
            style="@style/TextViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/img_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_pregunta" />

        <EditText
            android:id="@+id/txt_respuesta"
            style="@style/EditTextBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:hint="@string/text_answer_hint"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image">

            <RadioButton
                android:id="@+id/btn_single_option_0"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <RadioButton
                android:id="@+id/btn_single_option_1"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_2"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_3"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_4"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_5"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_6"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_7"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_8"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />

            <RadioButton
                android:id="@+id/btn_single_option_9"
                style="@style/RadioButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height"
                android:layout_marginTop="8dp" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout_multiple_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image">

            <CheckBox
                android:id="@+id/btn_multiple_option_0"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_1"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_2"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_3"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_4"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_5"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_6"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_7"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_8"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />

            <CheckBox
                android:id="@+id/btn_multiple_option_9"
                style="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radio_button_height" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
