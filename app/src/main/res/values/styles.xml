<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="AppTheme">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textSize">@dimen/font_30sp</item>
        <item name="android:paddingRight">@dimen/toolbar_padding_right</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="TextViewPrimary">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_24sp</item>
    </style>

    <style name="TextViewSecondary">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_18sp</item>
    </style>

    <style name="TextViewTitle" parent="TextView">
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textSize">@dimen/font_18sp</item>
    </style>

    <style name="TextViewLabel" parent="TextView">
        <item name="android:textColor">@color/grayPrimary</item>
    </style>

    <style name="TextViewClickable" parent="TextView">
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- EditText -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="EditTextBody">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_left</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_right</item>
        <item name="android:paddingTop">@dimen/edit_text_multiline_padding_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <!-- Button -->
    <style name="MaterialButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Radio Button -->
    <style name="RadioButton">
        <item name="android:button">@drawable/ic_radio_off</item>
        <item name="android:paddingLeft">@dimen/radio_button_padding_left</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <!-- Check Box -->
    <style name="CheckBox">
        <item name="android:button">@drawable/ic_check_off</item>
        <item name="android:paddingLeft">@dimen/check_box_padding_left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>
</resources>
